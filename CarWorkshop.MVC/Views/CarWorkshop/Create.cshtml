@using CarWorkshop.Application.CarWorkshop;
@model CarWorkshopDto
<h1>Create Car Workshop</h1>


<div class="row">
    <div class="col-md-4">
        <!-- Tutaj akcja -> z formy wykona się akcja Create z kontrolera CarWorkshop, która ma nad sobą znacznik HttpPost-->
        <form action="/CarWorkshop/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Name</label>
                <!-- Tu ważne w tym inpucie, żeby name="Name", tak smao Id to znaczy, żeby to korespondowało z właściwością po stronie backendu -->
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="About">About</label>
                <input class="form-control" type="text" asp-for="About" />
            </div>

            <!--Pojawia się teraz pytanie jak zmapować właściwość ContactDetails, która przecież jest obiektem-->
            <div class="form-group mb-3">
                <label class="control-label" asp-for="PhoneNumber">PhoneNumber</label>
                <input class="form-control" type="text" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Street">Street</label>
                <input class="form-control" type="text" asp-for="Street" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="City">City</label>
                <input class="form-control" type="text" asp-for="City" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="PostalCode">PostalCode</label>
                <input class="form-control" type="text" asp-for="PostalCode" />
            </div>

            <!--Po naciśnieciu odpali się metoda Create w backendzie-->
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

            @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
            }